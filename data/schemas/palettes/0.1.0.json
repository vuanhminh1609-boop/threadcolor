{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Palettes dataset",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["id", "ten", "tags", "stops"],
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1
      },
      "ten": {
        "type": "string",
        "minLength": 1
      },
      "tags": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "string",
          "minLength": 1
        }
      },
      "stops": {
        "type": "array",
        "minItems": 3,
        "maxItems": 7,
        "items": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        }
      }
    }
  }
}
