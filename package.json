{
  "name": "8portals-data-tools",
  "private": true,
  "scripts": {
    "validate:data": "node data/scripts/validate_contract.mjs",
    "check:encoding": "node scripts/check-encoding.mjs",
    "check:glossary": "node scripts/check-glossary.mjs",
    "check:syntax": "node --check --experimental-default-type=module script.js library.js auth.js account.js guide.js",
    "build:css": "tailwindcss -c tailwind.config.js -i ./src/tailwind.css -o ./assets/dist/tailwind.css",
    "watch:css": "tailwindcss -c tailwind.config.js -i ./src/tailwind.css -o ./assets/dist/tailwind.css --watch"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.17"
  }
}
