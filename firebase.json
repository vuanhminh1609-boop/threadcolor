{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      "**/node_modules/**",
      "functions/**",
      ".github/**",
      "DOC/**",
      "reports/**",
      "tools/**",
      "workers/**",
      "_graveyard/**"
    ],
    "headers": [
      {
        "source": "/admin/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/admin/**",
        "function": "adminApi"
      }
    ]
  }
}
